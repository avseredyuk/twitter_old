<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id = "tweetService" class = "com.avseredyuk.domain.SimpleTweetService" autowire="constructor" lazy-init="true">
        <lookup-method name="createEmptyTweet" bean="tweet"/>
    </bean>

    <bean name="tweet" class="com.avseredyuk.domain.Tweet" scope="prototype"/>

</beans>